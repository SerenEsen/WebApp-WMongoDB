<!doctype html>
<html lang="en">
<head>
    <title>Yazılım Geliştirme Siteleri</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="css/site.css"><!--iki dosyayı birbirine bağlama durumu-->
    <title>Sizde Yazılım Geliştirme Uzmanı Olmak İstiyor Musunuz?</title>
</head>
<body>
    <!--Menü Kısmı Başlangıç-->
    <nav class="navbar navbar-expand-lg navbar-light fixed top" style="background-color: #808080;">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">   </span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            </div>
        </div>
    </nav>
    <!-- Slider Başlangıç-->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="img/code6.jpg" class="d-block w-100 resimSlider" height=422px alt="...">
            </div>
            <div class="carousel-item">
                <img src="img/code4.jpg" class="d-block w-100 resimSlider" height=422px alt="...">
            </div>
            <div class="carousel-item">
                <img src="img/code2.jpg" class="d-block w-100 resimSlider" height=422px alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- Slider Bitiş-->

    <section class="p-5 text-center " style="background-color: #808080; color: white; height: 60px; line-height: 60px; ">
        <div class="container">
            <h3>Software Developer Olmak İsteyenlerin Ziyaret Etmesi Gereken Siteler</h3>
        </div>
    </section>
    <!-- Anasayfada Liste Başlangıç-->

    <section class="p-5 text-center">
        <div class="container">
            <h2>Yazılıma Buradan Başla</h2>
        </div>
    </section>
    @model IEnumerable<YazılımSitesi.Controllers.Site>

    @{
        ViewData["Title"] = "Listview";
    }
    <table class="table">
        <thead>
            <tr>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Row_number).
                    </td>
                    <td title=@Html.DisplayTextFor(modelItem => item.Site_exp)>
                        @Html.DisplayFor(modelItem => item.Site_name)
                    </td>

                    <td>
                        <a href="@Html.DisplayTextFor(modelItem=>item.Link)">Visit WebSite</a>
                    </td>
                </tr>

            }
        </tbody>

    </table>
    <!--Anasayfa Liste Bitiş-->
</body>